<!DOCTYPE html>
<%- include('header') -%>
<html><script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="css/base.css">
<script language="javascript" type="text/javascript" src="../js/profile.js"></script>
<script src="../js/profilescript.js"></script>
<head>
	<title>Preferences</title>
</head>
<body>
<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
      <div class="columns">
      	<div class="column">
      	<figure  class="image is-128x128">
      	<img style = "float: left;" class='is-rounded is-flex' src="https://g29profilepictures.s3.amazonaws.com/<%= user %>"  onerror="this.onerror=null; this.src='https://g29profilepictures.s3.amazonaws.com/default.jpg'">
      	</figure>
      	</div>
      	<div class="column">
      	<form method="post" action="/upload" enctype="multipart/form-data">
		  <input type="file" id="myFile" name="myFile">
		  <input type="submit" class= "input mt-2" value="Upload">
		</form>
      	</div>
      </div>
      <h4 style="color:red;" class="message">
                    <%= message %>
 	  </div>
      <div class="column is-half has-text-centered">
      	<form action="/updateaffiliation" method="post" class="updateform">
		  	<div class="field has-addons">
			  <p class="control">
		          <a class="button is-static signup">
		            New Affiliation
		          </a>
	          </p>
	          <input class = "input" type="text" name="affiliation" id="affiliation">
			  </div>
			<input type="submit" class= "input" value="Update">
		</form>
		<form action="/updatepassword" method="post" class="updateform mt-2">
			<div class="field has-addons">
			  <p class="control">
		          <a class="button is-static signup">
		            Old Password
		          </a>
	          </p>
	          <input class = "input" type="text" name="old_password" id="old_password">
			</div>
		  	<div class="field has-addons">
			  <p class="control">
		          <a class="button is-static signup">
		            New Password
		          </a>
	          </p>
	          <input class = "input" type="text" name="password1" id="password1">
			</div>
			<div class="field has-addons">
			  <p class="control">
		          <a class="button is-static signup">
		            Retype New Password
		          </a>
	          </p>
	          <input class = "input" type="text" name="password2" id="password2">
			</div>
		    <input type="submit" class= "input" value="Update">
		</form>
		<form action="/updateemail" method="post" class="updateform mt-2">
		  	<div class="field has-addons">
			  <p class="control">
		          <a class="button is-static signup">
		            New Email
		          </a>
	          </p>
	          <input class = "input" type="text" name="email" id="email">
			  </div>
		    <input type="submit" class= "input" value="Update">
		</form>
