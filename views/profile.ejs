			    <input type="checkbox" name="interests" value="ENVIRONMENT" <% if (interests.includes("ENVIRONMENT")) {%> checked <% } %>> Environment
			    <input type="checkbox" name="interests" value="FIFTY" <% if (interests.includes("FIFTY")) {%> checked <% } %>> Fifty<br>
			    <input type="checkbox" name="interests" value="FOOD & DRINK" <% if (interests.includes("FOOD & DRINK")) {%> checked <% } %>> Food & Drink
			    <input type="checkbox" name="interests" value="GREEN" <% if (interests.includes("GREEN")) {%> checked <% } %>> Green
