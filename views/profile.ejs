			    <input type="checkbox" name="interests" value="SPORTS" <% if (interests.includes("SPORTS")) {%> checked <% } %>> Sports
			    <input type="checkbox" name="interests" value="STYLE" <% if (interests.includes("STYLE")) {%> checked <% } %>> Style
			    <input type="checkbox" name="interests" value="STYLE & BEAUTY" <% if (interests.includes("STYLE & BEAUTY")) {%> checked <% } %>> Style & Beauty
			    <input type="checkbox" name="interests" value="TASTE" <% if (interests.includes("TASTE")) {%> checked <% } %>> Taste
			    <input type="checkbox" name="interests" value="TECH" <% if (interests.includes("TECH")) {%> checked <% } %>> Tech
